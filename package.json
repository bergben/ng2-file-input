{
    "name": "ng2-file-input",
    "version": "1.0.2",
    "description": "Angular 2 and beyond component that implements a drag and drop or select file selection, including preview",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bergben/ng2-file-input.git"
    },
    "license": "MIT",
    "module": "./dist/ng2-file-input.js",
    "main": "./dist/bundles/ng2-file-input.umd.js",
    "typings": "./dist/ng2-file-input.d.ts",
    "scripts": {
        "transpile": "ngc",
        "package": "rollup -c",
        "minify": "uglifyjs dist/bundles/ng2-file-input.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng2-file-input.umd.min.js",
        "build": "npm run transpile && npm run package && npm run minify"
    },
    "author": {
        "name": "Benedikt Berger",
        "email": "benedikt.berger@live.de"
    },
    "keywords": [
        "angular",
        "angular2",
        "angular4",
        "file",
        "input",
        "drag and drop",
        "preview"
    ],
    "dependencies": {
        "bergben-angular2-file-drop": "^0.2.0"
    },
    "peerDependencies": {
        "@angular/core": "^2.0.0",
        "@angular/platform-browser": "^2.0.0",
        "@angular/common": "^2.0.0"
    },
    "devDependencies": {
        "@angular/common": "^2.4.8",
        "@angular/compiler": "^2.4.8",
        "@angular/compiler-cli": "^2.4.8",
        "@angular/core": "^2.4.8",
        "@angular/platform-browser": "^2.4.8",
        "@angular/platform-browser-dynamic": "^2.4.8",
        "@angular/platform-server": "^2.4.8",
        "@angular/router": "^3.4.8",
        "@types/node": "^7.0.5",
        "core-js": "^2.4.1",
        "reflect-metadata": "^0.1.3",
        "rollup": "^0.41.4",
        "rxjs": "5.1.1",
        "tslint": "^4.4.2",
        "typescript": "^2.1.6",
        "uglify-js": "^2.7.5",
        "zone.js": "^0.7.7"
    },
    "bugs": {
        "url": "https://github.com/bergben/ng2-file-input/issues"
    },
    "homepage": "https://github.com/bergben/ng2-file-input#readme"
}